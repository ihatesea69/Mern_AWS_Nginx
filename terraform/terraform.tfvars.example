# Copy this file to terraform.tfvars and fill in your values

# AWS Configuration
aws_region = "us-east-1"
aws_access_key_id = "your-aws-access-key-id"
aws_secret_access_key = "your-aws-secret-access-key"

# Project Configuration
project_name = "proshop"
instance_type = "t3.small"  # or t3.medium for better performance

# SSH Key Configuration
# Sử dụng existing key pair đã tạo trên AWS Console
key_name = "MERN_Server"

# Git Repository
# Replace with your actual repository URL
git_repo_url = "https://github.com/your-username/proshop.git"

# Domain Configuration
# Use your domain name or "_" for any domain
domain_name = "your-domain.com"  # or "_"

# Application Configuration
mongodb_uri = "mongodb://localhost:27017/proshop"
jwt_secret = "your-super-secret-jwt-key-change-this-in-production"
paypal_client_id = "your-paypal-client-id"
node_env = "production"
